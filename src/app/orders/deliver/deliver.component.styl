@import '../../styles/colors'

.deliver
  height 100%
  padding 16px
  width 100%

.deliver-container
  padding 16px

.current-order
  align-items center
  border 4px solid $color_accent
  border-radius 16px
  display flex
  padding 4px 8px

.current-order-id
  color $color_accent
  font-size 40px
  font-weight bold
  letter-spacing .05em
  padding 4px 8px 8px

.current-order-body
  display flex
  flex 1
  flex-wrap wrap
  justify-content space-around
  min-width 0
  padding 8px 16px

.current-order-item
  border 2px solid $color_gray_tint2
  border-radius 4px
  color $color_white
  font-size 32px
  font-weight bold
  margin 8px

.order-item-name
  background $color_gray_shade1
  border-radius 4px 0 0 4px
  display inline-block
  padding 4px 16px
.order-item-qty
  border-radius 0 4px 4px 0
  display inline-block
  padding 4px 16px


.next-order-queue
  display flex
  flex-wrap wrap
  margin-top 40px

.next-order-item
  align-items center
  border 2px solid $color_gray_shade2
  border-radius 8px
  color $color_white
  display flex
  margin-top 8px
  padding 4px 8px
  width 100%

.next-order-id
  font-size 28px
  padding 4px 8px 8px

.next-order-body
  display flex
  flex-wrap wrap

.order-item
  border 2px solid $color_gray_shade2
  font-size 18px
  font-weight bold
  & + &
    margin-left 4px
  .order-item-name
    padding 2px 8px
  .order-item-qty
    padding 2px 8px
