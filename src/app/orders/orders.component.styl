@import '../styles/colors'
@import '../styles/variables'

.orders
  background radial-gradient(transparent, rgba(0,0,0,.6)) fixed, url(../../assets/images/top.jpg) center center / cover no-repeat
  background-attachment fixed
  background-blend-mode multiply
  display flex
  flex-direction column
  height auto
  justify-content center
  min-height 100%
  padding 16px
  width 100%

.orders-top
  color $color_white
  font-size 30px
  font-weight bold
  text-align center

.orders-item-container
  display flex
  flex-wrap wrap
  justify-content space-around
  margin 0 auto
  margin-top 18px
  max-width 700px
  width 100%

.orders-item
  background rgba($color_white, 20%)
  border 4px solid $color_primary
  border-radius 50%
  color $color_primary
  font-size 30px
  font-weight bold
  height 200px
  margin 10px
  width @height

.orders-item-link
  border-radius 50%
  display block
  height 100%
  text-align center
  width 100%
.orders-item-name
  line-height 190px


@media screen and (max-width $mobile_width)
  .orders-top
    font-size 18px
  .orders-item-container
    align-items center
    flex-direction column
  .orders-item
    height 150px
    width @height
  .orders-item-name
    line-height 140px
