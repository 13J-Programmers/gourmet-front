@import '../styles/colors'

.orders
  height 100%
  padding 16px
  width 100%

.orders-top
  color $color_white
  font-size 36px
  font-weight bold
  text-align center

.orders-item-container
  display flex
  flex-wrap wrap
  justify-content space-around
  width 100%

.orders-item
  border 4px solid $color_primary
  border-radius 50%
  color $color_primary
  font-size 26px
  font-weight bold
  height 200px
  margin 10px
  width @height

.orders-item-link
  border-radius 50%
  display block
  height 100%
  text-align center
  width 100%
.orders-item-name
  line-height 190px
