@import '../../styles/colors'
@import '../../styles/variables'

.register
  display flex
  flex-direction column
  height 100%
  width 100%
  overflow hidden

.register-list
  display flex
  flex 1
  flex-wrap wrap
  justify-content space-around
  margin 0 auto
  min-width 0
  padding 16px
  width $tablet_width

.register-submit
  border-top 1px solid $color_gray
  height 20%
  min-width 200px
  padding 8px
  width 100%
.register-price
  color $color_white
  font-size 20px
  padding 4px 8px
  text-align center
.register-submit-btn
  background $color_primary
  border-radius 8px
  box-shadow 0 2px 4px rgba($color_primary, 0.1)
  color $color_black
  font-size 24px
  font-weight bold
  margin 48px auto 0
  max-width 300px
  padding 6px 8px 7px
  text-align center
  transition background-color .3s
  user-select none
  width 80%
  &.disabled
    background shade($color_primary, 40%)



